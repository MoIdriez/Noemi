@using System.Linq.Expressions
@using Noemi.Controllers
@model AdminController.SettingsViewModel

<div id="page-wrapper">
    <!-- ==========================
        CONTACT - START
    =========================== -->
    <section class="content" id="contact">
        <div class="container">
            <div class="row">

                <div class="col-sm-12">
                    <h1>Hello beautifull Admin</h1>
                    <p>So this page is here to allow you to setup your settings. Have fun!!!</p>
                    
                    @using (Html.BeginForm("Settings", "Admin", FormMethod.Post))
                    {
                        <fieldset>
                            @Field(m => m.ColourMode)
                            @Field(m => m.ColourOrder)
                            @Field(m => m.ColourOrderIsRandom)
                            @Field(m => m.ImageOrder)
                            @Field(m => m.ImageOrderIsRandom)
                            @TextArea(m => m.Colours9)
                            @TextArea(m => m.Colours36)
                            <div class="form-group control-group">
                                <div class="controls">
                                    <button type="submit" id="send" class="btn btn-primary btn-sm"><i class="fa fa-check"></i>Submit these awesome changes bless your path may be</button>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- ==========================
        CONTACT - END
    =========================== -->

</div>

@helper Field(Expression<Func<AdminController.SettingsViewModel, string>> expression)
{
    <div class="form-group control-group col-sm-12">
        <div class="controls">
            @Html.LabelFor(expression)
            @Html.ValidationMessageFor(expression)
            @Html.TextBoxFor(expression, new { @class = "form-control" })
        </div>
    </div>

}

@helper TextArea(Expression<Func<AdminController.SettingsViewModel, string>> expression)
{
    <div class="form-group control-group col-sm-12">
        <div class="controls">
            @Html.LabelFor(expression)
            @Html.ValidationMessageFor(expression)
            @Html.TextAreaFor(expression, new { @class = "form-control" })
        </div>
    </div>

}

@helper Field(Expression<Func<AdminController.SettingsViewModel, bool>> expression)
{
    <div class="form-group control-group col-sm-12">
        <div class="controls">
            @Html.LabelFor(expression)
            @Html.ValidationMessageFor(expression)
            @Html.EditorFor(expression, new { @class = "form-control" })
        </div>
    </div>

}