@{ ViewBag.Title = "Home"; }

<div id="page-wrapper">
    <!-- ==========================
        CONTACT - START
    =========================== -->
    <section class="content" id="contact">
        <div class="container">
            <div class="row">

                <div class="col-sm-12">
                    <h1>Welcome</h1>
                    <h3>A super kind welcoming and greeting message that will fill there little hearts with joy</h3>
                    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                    {
                        <fieldset>
                            <div class="form-group control-group">
                                <div class="controls">
                                    <label for="prolific_pid">Your Prolofic ID:<span>*</span></label>
                                    <p class="help-block"></p>
                                    <input type="text" class="form-control" placeholder="Your Prolofic ID" id="prolific_pid" name="prolific_pid" data-validation-required-message="Please enter your Prolofic ID." aria-invalid="false">
                                    <button type="submit" id="send" class="btn btn-primary btn-sm"><i class="fa fa-check"></i>Submit</button>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </section>
    <!-- ==========================
        CONTACT - END
    =========================== -->

</div>